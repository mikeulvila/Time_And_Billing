<h1><%= @account.name %></h1>

<% if @account.is_a?(Customer) %>
<h4>Account Entries</h4>
<table>
  <% @account.account_entries.each do |entry| %>
  <tr>
    <td><%= entry.inspect %></td>
  </tr>
  <% end %>
</table>
<% end %>

<% if @account.is_a?(Employee) %>
<h4>Time Entries</h4>

<table>
  <% @account.time_entries.each do |entry| %>
  <tr>
    <td><%= entry.inspect %></td>
  </tr>
  <% end %>
</table>
<% end %>
